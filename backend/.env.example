# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/zerotrace
# For production use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/zerotrace

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Certificate Signing Keys (RSA)
# Generate keys using:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
CERT_PRIVATE_KEY_PATH=./keys/private.pem
CERT_PUBLIC_KEY_PATH=./keys/public.pem

# CORS
CORS_ORIGIN=http://localhost:3000
